<div class="row">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
                <div class="col-md-4 col-md-offset-4">
                  <div class="panel panel-info">
                      <div class="panel-heading">
                          <%=  t('site.change')  %>
                      </div>
                      <div class="panel-body">

                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nova senha" %>
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar nova senha" %>
                            </div>

                      </div>
                      <div class="actions">
                          <%= f.submit t('site.change_my_password'), class:"btn btn-success btn-block"  %>
                      </div>
                  </div>
                </div>
      <% end %>
</div>

    <% unless devise_error_messages!.blank? %>
    <% resource.errors.full_messages.each do |message| %>
        <%= javascript_tag "$.notify( {message: '#{message}'}, {type: 'danger',
                                            placement: { from: 'top', align: 'center'}});" %>
    <% end %>
<% end %>