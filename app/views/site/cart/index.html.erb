<!DOCTYPE html>
<html lang="en">

    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

      <%= stylesheet_link_tag    'application', media: 'all' %>


      <%= csrf_meta_tags %>

<h1>Carrinho de Compras</h1>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Produtos</th>
                            <th>Quantidade</th>
                            <th>Valor Unit.</th>
                            <th>SubTotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @ads.each do |ad| %>
                        <tr>
                            <td style="width: 15px"><%=  ad.id %></td>
                            <td><%= ad.title %></td>
                            <td style="width: 100px"> <select class="form-control">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select></td>
                            <td style="width: 90px"> <%= humanized_money_with_symbol ad.price %></td>
                            <td style="width: 90px"> <% c = humanized_money_with_symbol ad.price * 2 %>
                                                                      <%= c %>
                            </td>
                            <td style="width: 50px">
                                <button type="button" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
<div class= "col-md-3 col-md-offset-9">
    <div class= "text-center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Valor Total</b>
            </div>
            <div class="panel-body">
                <h4><p> R$ 15,50 </p></h4>
            </div>
        </div>
    </div>
</div>

<div class= "col-md-3 col-md-offset-9">
    <div class= "text-right">
        <%= link_to "#", class:"btn btn-success" do%>
            <i class="fa fa-check  fa-fw"></i> Finalizar Compra
        <% end %>
    </div>
</div>