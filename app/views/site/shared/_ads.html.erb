<% @ads.each do |ad| %>
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <%= image_tag ad.picture.url(:medium) %>
            <div class="caption">

                <h4
                class="pull-right"><%= humanized_money_with_symbol(ad.price) %>
                </h4>

                <%= link_to truncate(ad.title, length: 19), site_ad_detail_path(ad), remote: true, data: {push: :partial} %>

                <p><%= truncate(ad.description_short, length: 150) %></p>
            </div>
            <div class="ratings">
                <p class="pull-right">12 reviews</p>
                <p>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                    <span class="glyphicon glyphicon-star"></span>
                </p>
            </div>
        </div>
    </div>
<% end %>

<div class="row">
    <div class="col-xs-12">
        <div class="text-center">
            <%= paginate @ads %>
        </div>
    </div>
</div>